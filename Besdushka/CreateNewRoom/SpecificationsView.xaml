<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Besdushka.CreateNewRoom.SpecificationsView">
    <ContentView.Content>
        <StackLayout>
            <Label Text="Характеристики и атрибуты"/>
            <Label Text="Атрибуты"/>
            <Button Text="Добавить" x:Name="AddAttribute" Clicked="AddAttribute_Clicked"/>
            <CollectionView x:Name="attributes">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Entry Placeholder="" Text="{Binding}" Focused="AttributesEntry_Focused" Unfocused="AttributesEntry_Completed"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label Text="Характеристики"/>
            <Button Text="Добавить" x:Name="AddCharacteristic" Clicked="AddCharacteristic_Clicked"/>
            <CollectionView x:Name="characteristics">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Entry Placeholder="" Text="{Binding}" Focused="CharacteristicsEntry_Focused" Unfocused="CharacteristicsEntry_Completed" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentView.Content>
</ContentView>
