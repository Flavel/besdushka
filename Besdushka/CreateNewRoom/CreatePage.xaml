<?xml version="1.0" encoding="utf-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Besdushka.CreateNewRoom.CreatePage">
    <!--Pages can be added as references or inline-->
    <ContentPage Title="Основное" >
        <StackLayout>
            <Entry Placeholder="Название" x:Name="roomName"/>
            <Editor Placeholder="Старт" x:Name="roomDescription"/>
            <Button Text="Создать" Clicked="Create"/>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Мир" >
        <Grid x:Name="grid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Column="3" Grid.Row="0" Text="История мира" Clicked="Story"/>
            <Button Grid.Column="3" Grid.Row="1" Text="Характеристики персонажей и атрибуты" Clicked="Specifications"/>
            <Button Grid.Column="3" Grid.Row="2" Text="Предметы и умения персонажей" Clicked="Items"/>
            <Button Grid.Column="3" Grid.Row="3" Text="НПС" Clicked="NPC"/>
        </Grid>
    </ContentPage>
</TabbedPage>
